{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",{
      "identifier": "fs:allow-app-read",
      "allow": ["$HOME/**"]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": ["$HOME/**"]
    }
  ]
}